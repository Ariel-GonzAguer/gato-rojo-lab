---
import type { PropsCard } from "../types/types";

const { name, tags, description, emoji, link } = Astro.props as PropsCard;
---

<style>
  li {
    backdrop-filter: blur(5px);
    padding: 2rem;
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: transform 0.3s ease;
    position: relative;
    overflow: hidden;
    width: 350px;
    height: 100%;

    &:hover {
      transform: translateY(-5px);
    }

    & h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
      position: relative;
      z-index: 1;
    }

    & p {
      margin: 0.5rem 0;
      font-size: 1.2rem;
      position: relative;
      z-index: 1;
    }

    & .emoji {
      font-size: 8rem;
      position: absolute;
      right: -1rem;
      bottom: -1rem;
      transform: rotate(-15deg);
      transition: all 0.3s ease;
    }

    &:hover .emoji {
      transform: rotate(0deg) scale(1.1);
    }

    & .tags {
      font-size: 0.9rem;
      margin: 1rem 0;
      position: relative;
      z-index: 1;
    }

    & a {
      text-decoration: none;
      display: inline-block;
      margin-top: 1rem;
      position: relative;
      z-index: 1;
      width: fit-content;
    }
  }

  @media (max-width: 768px) {
    li {
      width: 95%;
      max-width: 350px;
      
      & .emoji {
        font-size: 6rem;
      }
    }
  }
</style>

<li>
  <h3 class="proyectoH3" translate="no">{name}</h3>
  <p class="descripcion">{description}</p>
  <p class="emoji">{emoji}</p>
  <p class="tags">{tags.join(", ")}</p>
  <a href={link} target="_blank" rel="noopener noreferrer">Ver Proyecto</a>
</li>
